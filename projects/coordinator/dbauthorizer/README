#for testing, create a database called batfish_test and the tables as specified below

create database batfish_test;

create table ApiKeys 
 (ApiKey varchar(255) not null primary key);
 
 create table Permissions
 (ApiKey varchar(255) not null,
  ContainerName varchar(255) not null,
  primary key (ApiKey, ContainerName));



# also create a user batfish with password batfish that has select and insert privileges for batfish_Test

create user 'batfish'@'localhost' identified by 'batfish';

GRANT SELECT, INSERT ON batfish_test.* TO 'batfish'@'localhost';



#this is the test apikey that we use

insert into ApiKeys values ('0000000');
