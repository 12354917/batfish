! boot system flash:EOS.swi
hostname r1
interface Ethernet1
   no switchport
   ip address 10.12.0.1/24
!
interface Loopback0
   ip address 1.0.0.1/32
!
ip routing
!
router bgp 1
!!! This router ID is the same as r2a,
!!! but since this is ebgp, r2a should accept the route nevertheless
   router-id 2.0.0.1
   neighbor 10.12.0.2 remote-as 2
   network 1.0.0.1/32
!
end
